from __future__ import with_statement
from __future__ import print_function
import os
import sys
import time

sys.path = ['${VISTA_SOURCE_DIR}/Python/vista',
            '${VISTA_SOURCE_DIR}/Utilities/Dox/PythonScripts'] + sys.path

from OSEHRAHelper import ConnectToMUMPS,PROMPT
from LogManager import initLogging, logger

def listFileManFileAttributes(FileManNo, outputFile, logFile):
  logger.info("Processing file %s ..." % FileManNo)
  VistA=ConnectToMUMPS(sys.argv[3],'${VISTA_CACHE_INSTANCE}','${VISTA_CACHE_NAMESPACE}')
  if ('${VISTA_CACHE_USERNAME}' and '${VISTA_CACHE_PASSWORD}'):
    VistA.login('${VISTA_CACHE_USERNAME}','${VISTA_CACHE_PASSWORD}')
  if VistA.type=='cache':
    try:
      VistA.ZN('${VISTA_CACHE_NAMESPACE}')
    except IndexError as no_namechange:
      pass
  VistA.wait(PROMPT)
  VistA.write('D ^%ZIS')
  VistA.wait('DEVICE:')
  VistA.write('HOME;300;999')
  VistA.wait(PROMPT)
  try:
    duz = 1
    VistA.write('S DUZ=%d D Q^DI' % duz)
    VistA.wait('Select OPTION:')
    # data dictionary utilities
    VistA.write('8' )
    VistA.wait('Select DATA DICTIONARY UTILITY OPTION:')
    VistA.write('1') # list file attributes
    VistA.wait_re('START WITH WHAT FILE:')
    VistA.write(FileManNo)
    index = VistA.multiwait(["START WITH",'GO TO'])
    if index == 0:
      logger.error('No file to be found')
      sys.exit(1)
    VistA.write(FileManNo)
    while True:
      index = VistA.multiwait(['Select SUB-FILE:',
                            'Select LISTING FORMAT:'])
      if index == 0:
        VistA.write('')
        continue
      else:
        # brief format 2, condensed 7, standard 1
        VistA.write('1')
        break
    firstStartWithField = True

    timeout = time.time() + 60*5 # 5 minutes
    while True:
      if time.time() > timeout:
        logger.error("Timed out processing file: %s" % FileManNo)
        sys.exit(1)
      index = VistA.multiwait(['ALPHABETICALLY BY LABEL?',
                            'Start with field:',
                            'DEVICE:',
                            'HOST FILE NAME:',
                            'PARAMETERS',
                            'Select DATA DICTIONARY UTILITY OPTION:'])
      if index == 0:
        VistA.write('No')
        continue
      elif index == 1:
        if not firstStartWithField:
           VistA.write('?')
           continue
        firstStartWithField = False
        VistA.write('?')
        # print out all fields to mitigate some of the parsing problem with the schema file output
        while True:
          idx = VistA.multiwait(['Start with field:',
                              'Do you want the entire [0-9-Entry ]*FIELD[S ]* List?',
                              'Do you want the entire [0-9]*-Entry ATTRIBUTE List?',
                              '\'\^\' TO STOP:',
                              '\'\^\' to exit:'])
          if idx == 0:
            # using default
            VistA.write('')
            break
          elif idx == 1 or idx == 2:
            VistA.write('Y')
            continue
          elif idx == 3 or idx == 4:
            VistA.write('')
            continue
          else:
            logger.warning('Unexpected index value %d, send \'\\r\'' % idx)
            VistA.write('')
            continue
        continue
      elif index == 2:
        VistA.write('HFS;999;99999')
        continue
      elif index == 3:
        VistA.write(outputFile)
        continue
      elif index ==4:
        if VistA.type == 'cache':
          VistA.write('')
        else:
          VistA.write('NEWVERSION:NOREADONLY:VARIABLE')
        break
      elif index == 5:
        VistA.write("?")
        break
    while True:
      index = VistA.multiwait(['Select DATA DICTIONARY UTILITY OPTION:',
                            'FORM\(S\)\/BLOCK\(S\):',
                            '\a',
                            '<[A-Z]+>'])
      if index == 0:
        VistA.write('')
        break
      if index == 1 or index == 2:
        VistA.write('')
        continue
      if index == 3:
        logger.error("Something went wrong with processing this file: %s" % FileManNo)
        sys.exit(1)
    VistA.wait('Select OPTION:')
    VistA.write('')
    VistA.wait(PROMPT)
    VistA.write('HALT')
  except EOFError as e:
    logger.error(e)

if __name__ == '__main__':
  if len(sys.argv) != 5:
    print('Wrong number of arguments')
    sys.exit()
  initLogging(sys.argv[4], "FileManGlobalAttributes.log")
  listFileManFileAttributes(sys.argv[1],
                            sys.argv[2], sys.argv[3])
